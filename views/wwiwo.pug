doctype html
html(lang='en')
    include ./includes/head.pug
    link(rel='stylesheet', href='/static/wwiwo.css')
    body
      header(id='reminder' style=showReminder ? 'visibility: visible' : 'visibility: hidden') This page is for you. Please bookmark it so you can return to it later.
        span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        a(id='link-to-hide-reminder') Hide
      div(class='wwiwo-container')
        each task in tasks
          div(class='container')

            // TODO: Append ids with task index
            h2(class='task-name')= task.name
            textarea(class='task-name-editor')= task.name

            h3 State
            p(class='state')= task.state
            textarea(class='state-editor small-editor')= task.state

            h3 Next steps
            p(class='next-steps')= task.nextSteps
            textarea(class='next-steps-editor small-editor')= task.nextSteps

      include ./includes/footer.pug
      script(src='/static/wwiwo.js')
