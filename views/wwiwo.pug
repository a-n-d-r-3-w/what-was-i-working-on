doctype html
html(lang='en')
    head
        title What was I working on?
        link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Andada')
        link(rel='stylesheet', href='/styles.css')
    body
      h1(class='page-title') What was I working on?
      div(class='container')

        h2(id='task-name')= task.name
        textarea(id='task-name-editor')= task.name

        h3 State
        p(id='state')= task.state
        textarea(id='state-editor')= task.state

        h3 Next steps
        p(id='next-steps')= task.nextSteps
        textarea(id='next-steps-editor')= task.nextSteps

        script(src='/script.js')
