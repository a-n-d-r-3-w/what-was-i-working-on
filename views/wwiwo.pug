doctype html
html(lang='en')
    include ./includes/head.pug
    link(rel='stylesheet', href='/static/wwiwo.css')
    body
      header(id='reminder' style=showReminder ? 'visibility: visible' : 'visibility: hidden') This page is for you. Bookmark it so you can return to it later.
        span &nbsp;&nbsp;&nbsp;&nbsp;
        a(id='link-to-hide-reminder') Hide
      div(class='wwiwo-container')
        div(class='container')

          h2(id='task-name')= task.name
          textarea(id='task-name-editor')= task.name

          h3 State
          p(id='state')= task.state
          textarea(id='state-editor' class='small-editor')= task.state

          h3 Next steps
          p(id='next-steps')= task.nextSteps
          textarea(id='next-steps-editor' class='small-editor')= task.nextSteps

      include ./includes/footer.pug
      script(src='/static/wwiwo.js')
